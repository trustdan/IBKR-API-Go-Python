# Set default behavior to automatically normalize line endings
* text=auto

# Explicitly declare text files that should always use LF line endings
*.go text eol=lf
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.jsx text eol=lf
*.tsx text eol=lf
*.json text eol=lf
*.yml text eol=lf
*.yaml text eol=lf
*.toml text eol=lf
*.md text eol=lf
*.txt text eol=lf
*.html text eol=lf
*.css text eol=lf
*.scss text eol=lf
*.sh text eol=lf
Dockerfile text eol=lf
*.nsi text eol=lf
*.bat text eol=crlf

# Denote binary files which should not be modified
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.woff binary
*.woff2 binary
*.ttf binary
*.eot binary
*.pdf binary
*.exe binary
*.dll binary
*.zip binary
*.tar binary
*.gz binary
*.7z binary
