# Set default behavior to automatically normalize line endings
* text=auto eol=lf

# Python files
*.py text diff=python
*.pyw text diff=python

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# PowerShell scripts
*.ps1 text eol=lf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf
docker-compose*.yaml text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Documentation
*.md text diff=markdown
LICENSE text
*.txt text

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf

# Specific file types
*.md text eol=lf
*.py text eol=lf
*.js text eol=lf
*.ts text eol=lf
*.go text eol=lf
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf
*.sh text eol=lf
*.ps1 text eol=lf

# Binary files
*.png binary
*.jpg binary
*.jpeg binary
*.gif binary
*.ico binary
*.exe binary
*.mov binary
*.mp4 binary
*.mp3 binary
*.flv binary
*.fla binary
*.swf binary
*.gz binary
*.zip binary
*.7z binary
*.ttf binary
*.eot binary
*.woff binary
*.woff2 binary
*.pyc binary
*.pdf binary
*.ez binary
*.bz2 binary
*.swp binary
*.webp binary

# Don't check for whitespace in generated files
*.min.js -text
*.min.css -text
**/wailsjs/go/* -text
