# Auto detect text files and perform LF normalization
* text=auto

# Python files
*.py text diff=python
*.pyw text diff=python

# Shell scripts
*.sh text eol=lf
*.bash text eol=lf

# PowerShell scripts
*.ps1 text eol=crlf

# Docker files
Dockerfile text eol=lf
*.dockerfile text eol=lf
docker-compose*.yml text eol=lf
docker-compose*.yaml text eol=lf

# Config files
*.json text eol=lf
*.yaml text eol=lf
*.yml text eol=lf
*.toml text eol=lf

# Documentation
*.md text diff=markdown
LICENSE text
*.txt text

# Git files
.gitattributes text eol=lf
.gitignore text eol=lf
