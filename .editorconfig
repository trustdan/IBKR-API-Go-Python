root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

# Web files
[*.{js,ts,json,html,css,svelte}]
indent_size = 2

# Config files
[*.{yaml,yml,toml}]
indent_size = 2

# Markdown files
[*.md]
trim_trailing_whitespace = true
max_line_length = off

# Go files
[*.go]
indent_style = tab

# Windows scripts
[*.{cmd,bat}]
end_of_line = crlf
