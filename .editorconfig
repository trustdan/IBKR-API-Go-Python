root = true

[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space
indent_size = 4

# Web files
[*.{js,jsx,ts,tsx,json,css,scss,html,htm,yaml,yml,toml}]
indent_size = 2

# Markdown files
[*.{md,markdown}]
trim_trailing_whitespace = false
max_line_length = off

# Go files
[*.go]
indent_style = tab

# Windows scripts
[*.{cmd,bat}]
end_of_line = crlf

# Makefile
[Makefile]
indent_style = tab
