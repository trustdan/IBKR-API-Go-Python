[IBKR]
  host = "127.0.0.1"
  port = 7497
  client_id = 1
  read_only = false
  account = ""

[Data]
  cache_dir = "data/cache"
  universe_cache_expiry = 1800
  minute_data_cache_expiry = 60
  options_cache_expiry = 300

[Trading]
  mode = "PAPER"
  max_positions = 5
  max_daily_trades = 3
  risk_per_trade = 0.02
  price_improvement_factor = 0.4
  allow_late_day_entry = true

[Strategy]
  [Strategy.high_base]
    max_atr_ratio = 2.0
    min_rsi = 60
  [Strategy.low_base]
    min_atr_ratio = 0.5
    max_rsi = 40
  [Strategy.bull_pullback]
    rsi_threshold = 45
  [Strategy.bear_rally]
    rsi_threshold = 55

[Options]
  min_dte = 30
  max_dte = 45
  min_delta = 0.3
  max_delta = 0.5
  max_spread_cost = 500
  min_reward_risk = 1.5

[Universe]
  min_market_cap = 10000000000
  min_price = 20
  min_volume = 1000000

[Scanner]
  host = "localhost"
  port = 50051
  max_concurrency = 50

[Logging]
  level = "INFO"
  file = "logs/trader.log"
  max_size_mb = 10
  backup_count = 5
  format = "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
